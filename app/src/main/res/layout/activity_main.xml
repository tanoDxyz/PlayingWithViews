<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xdevs.com.playingwithviews.VoiceRecognitionActivity"
    android:background="#caf">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:textColor="#000"
      android:layout_margin="8dp"
      android:id="@+id/resultTextView"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/srecognizer"
      android:text="Recongnize Speech"
      android:layout_centerInParent="true"
      android:textAllCaps="false"
      android:onClick="onSpeechRecognitionLaunced"
      />


  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Stop Recognizing"
      android:textAllCaps="false"
      android:layout_below="@id/srecognizer"
      android:layout_centerHorizontal="true"
      android:onClick="onSpeechRecognitionClose"/>

</RelativeLayout>
